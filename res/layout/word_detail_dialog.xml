<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:padding="10px">

    <TextView android:id="@+id/word_detail_dialog_subject"
        android:textStyle="bold"
        android:textColor="#663311"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
        
    <TextView android:id="@+id/word_detail_dialog_words"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#222222"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/word_detail_dialog_paragraph"
        android:gravity="right"
        android:textSize="14dp"
        android:textColor="#994422"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/word_detail_dialog_tag"
        android:gravity="right"
        android:textSize="12dp"
        android:textColor="#663311"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
